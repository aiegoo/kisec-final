<group name="sysmon-linux">
  <!-- Process creation monitoring -->
  <rule id="100100" level="8">
    <decoded_as>json</decoded_as>
    <field name="win.system.eventID">1</field>
    <description>Sysmon - Process Created</description>
  </rule>

  <!-- Network connections -->
  <rule id="100101" level="10">
    <decoded_as>json</decoded_as>
    <field name="win.system.eventID">3</field>
    <description>Sysmon - Network Connection Detected</description>
  </rule>

  <!-- Privilege escalation monitoring -->
  <rule id="100102" level="12">
    <decoded_as>json</decoded_as>
    <field name="win.system.eventID">12</field>
    <description>Sysmon - SetUID privilege escalation</description>
  </rule>

  <!-- Kernel Module Loaded -->
  <rule id="100103" level="12">
    <decoded_as>json</decoded_as>
    <field name="win.system.eventID">28</field>
    <description>Sysmon - Kernel Module Loaded</description>
  </rule>

  <!-- Process Access (suspicious inter-process activity) -->
  <rule id="100104" level="10">
    <decoded_as>json</decoded_as>
    <field name="win.system.eventID">10</field>
    <description>Sysmon - Process Access detected</description>
  </rule>

  <!-- Raw Access Read -->
  <rule id="100105" level="12">
    <decoded_as>json</decoded_as>
    <field name="win.system.eventID">9</field>
    <description>Sysmon - Raw Access Read activity</description>
  </rule>

  <!-- File Create/Delete/Modify -->
  <rule id="100106" level="8">
    <decoded_as>json</decoded_as>
    <field name="win.system.eventID">11</field>
    <description>Sysmon - File Created</description>
  </rule>

  <rule id="100107" level="8">
    <decoded_as>json</decoded_as>
    <field name="win.system.eventID">23</field>
    <description>Sysmon - File Deleted</description>
  </rule>

</group>
