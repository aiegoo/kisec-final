<group name="sysmon-linux">
  <rule id="200100" level="10">
    <description>Sysmon for Linux - Process Created</description>
    <if_sid>60000</if_sid> <!-- Sysmon generic decoder -->
    <match>ProcessCreate</match>
  </rule>

  <rule id="200101" level="12">
    <description>Sysmon for Linux - Network Connect</description>
    <if_sid>60000</if_sid>
    <match>NetworkConnect</match>
  </rule>

  <rule id="200102" level="12">
    <description>Sysmon for Linux - Privilege Escalation SetUID</description>
    <if_sid>60000</if_sid>
    <match>SetUID</match>
  </rule>

  <rule id="200103" level="12">
    <description>Sysmon for Linux - Kernel Module Loaded</description>
    <if_sid>60000</if_sid>
    <match>KernelModuleLoad</match>
  </rule>
</group>
